<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Username or Email"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="320.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100.0dp"
            android:id="@+id/textLogInName"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="325.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_username"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:backgroundTint="#f2be8d"/>

        <TextView
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="320.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15.0dp"
            android:id="@+id/textPassword"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="325.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_password"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:backgroundTint="#f2be8d"/>

       <TextView
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/textForgotPassword"
            android:textColor="#f2be8d"/>
 
    </LinearLayout>

        <Button
            android:text="Log in"
            android:id="@+id/buttonLogIn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#f2be8d"
            android:textColor="#ba6d65"/>

</LinearLayout>