<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Successfully paid to Giyomi"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/receipt_Claim"
        android:layout_marginTop="100.0dp"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Amount Due: 800php"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20.0dp"
            android:id="@+id/receipt_AmountDue"
            android:textColor="@android:color/white"/>

        <TextView
            android:text="This is for verification only."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/receipt_Verification"
            android:layout_marginTop="50.0dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:text="Please show this receipt to the physical store assistant. You may claim the book at the physical store of the Author"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="316.4dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/receipt_ClaimBook"
            android:layout_marginTop="50.0dp"
            android:textColor="@android:color/white"/>

            <Button
                android:text="Thank you for purchasing!"
                android:id="@+id/buttonThankYou"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#f2be8d"
                android:textColor="#ba6d65"/>


        <TextView
            android:text="Claim on December 25, 2024, at Pulo, Cabuyao, Laguna\nNote: Subject-to-change date of book claiming."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="364.4dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/receipt_ClaimDate"
            android:layout_marginTop="50.0dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>
