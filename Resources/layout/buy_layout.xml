<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:layout_width="290.0dp"
                    android:layout_height="wrap_content"
                    android:text="The Reborn Witch Foretells Destruction"
                    android:id="@+id/buy_book1"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:buttonTint="#f2be8d"/>

                <ImageView
                    android:src="@drawable/books1"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView1" />

                <RadioButton
                    android:layout_width="290.0dp"
                    android:layout_height="wrap_content"
                    android:text="[Oshi no ko]"
                    android:id="@+id/buy_book2"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:buttonTint="#f2be8d"/>

                <ImageView
                    android:src="@drawable/books2"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView2" />

                <RadioButton
                    android:layout_width="290.0dp"
                    android:layout_height="wrap_content"
                    android:text="Bocchi the Rock!"
                    android:id="@+id/buy_book3"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:buttonTint="#f2be8d"/>

                <ImageView
                    android:src="@drawable/books3"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView3" />

                <RadioButton
                    android:layout_width="290.0dp"
                    android:layout_height="wrap_content"
                    android:text="Isekai Uncle"
                    android:id="@+id/buy_book4"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:buttonTint="#f2be8d"/>

                <ImageView
                    android:src="@drawable/books4"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView4" />

            </RadioGroup>

        </LinearLayout>

        <Button
            android:text="Proceed to checkout"
            android:id="@+id/buy_proceed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:backgroundTint="#f2be8d"
            android:textColor="#ba6d65"/>

    </LinearLayout>

</ScrollView>
