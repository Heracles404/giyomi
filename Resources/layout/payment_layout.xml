<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Book Name:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="320.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100.0dp"
            android:id="@+id/payment_bookname_text" 
            android:textColor="@android:color/white"/>

        <TextView
            android:text="*BOOK NAME*"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/payment_bookname" 
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <ImageView
        android:src="@drawable/books3"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:id="@+id/payment_imageview" />


        <TextView
            android:text="Mode of Payment"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="320.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20.0dp"
            android:id="@+id/payment_Text"
            android:textColor="@android:color/white"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payment_radiogroup">

            <RadioButton
                android:layout_width="290.0dp"
                android:layout_height="wrap_content"
                android:text="G-cash"
                android:id="@+id/radioButtonGcash"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:buttonTint="#f2be8d"/>

            <RadioButton
                android:layout_width="290.0dp"
                android:layout_height="wrap_content"
                android:text="Maya"
                android:id="@+id/radioButtonMaya"
                android:layout_gravity="center_horizontal" 
                android:textColor="@android:color/white"
                android:buttonTint="#f2be8d"/>
        </RadioGroup>

        <TextView
            android:text="Enter Mobile Number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="320.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15.0dp"
            android:id="@+id/payment_MobileNumberText" 
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="325.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/payment_mobilenumber"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:backgroundTint="#f2be8d"/>

        <TextView
            android:text="Note: No refunds"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15.0dp"
            android:id="@+id/payment_NoteText"
            android:textColor="@android:color/white"/>
    </LinearLayout>

        <Button
            android:text="Pay 800 Pesos"
            android:id="@+id/payment_pay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:backgroundTint="#f2be8d"
            android:textColor="#ba6d65"/>
</LinearLayout>
