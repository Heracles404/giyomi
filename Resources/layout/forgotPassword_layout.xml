<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Enter Email"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="320.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50.0dp"
            android:id="@id/textEmail"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="325.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/reset_email"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:backgroundTint="#f2be8d"/>

                <Button
            android:text="Send OTP"
            android:id="@+id/buttonOTP"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#f2be8d"
            android:textColor="#ba6d65"/>

                <TextView
            android:text="OTP"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="320.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50.0dp"
            android:id="@id/textOTP"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="325.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/reset_OTP"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:backgroundTint="#f2be8d"/>


        <TextView
            android:text="Enter New Password"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="320.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15.0dp"
            android:id="@+id/textPassword"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="325.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/reset_password"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:backgroundTint="#f2be8d"/>

                <TextView
            android:text="Confirm New Password"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="320.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15.0dp"
            android:id="@id/textRePassword"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="325.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/reset_rePassword"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:backgroundTint="#f2be8d"/>

                <Button
            android:text="Change Password"
            android:id="@+id/buttonReset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#f2be8d"
            android:textColor="#ba6d65"/>
 
    </LinearLayout>

</LinearLayout>